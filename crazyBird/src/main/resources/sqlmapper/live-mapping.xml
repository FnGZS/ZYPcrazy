<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.crazyBird.dao.live.LiveDao">
	<resultMap id="BaseResultMap"
		type="com.crazyBird.dao.live.dataobject.LiveDO">
		<id column="id" property="id" jdbcType="INTEGER" />
		<result column="title" property="title"
			jdbcType="VARCHAR" />
			<result column="stream_id" property="streamId"
			jdbcType="VARCHAR" />
		<result column="status" property="status"
			jdbcType="INTEGER" />
		<result column="play_url" property="playUrl"
			jdbcType="VARCHAR" />
		<result column="end_time" property="endTime"
			jdbcType="TIMESTAMP" />
		
	</resultMap>
  <sql id="Base_Column_List" >
    id, title,`status`, stream_id,play_url,end_time
  </sql>
<select id="getPlayList" resultMap="BaseResultMap">
	select 
	<include refid="Base_Column_List"/>
	from live where `status`=1 order by gmt_created desc
</select>
<select id="getPlayUrl" resultMap="BaseResultMap" parameterType="java.lang.Integer">
	select 
	<include refid="Base_Column_List"/>
	from live where id=#{id,jdbcType=INTEGER}
</select>
  

</mapper>